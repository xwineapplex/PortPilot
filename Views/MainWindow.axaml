<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:PortPilot_Project.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="600"
        x:Class="PortPilot_Project.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="PortPilot">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,*,Auto" Margin="16" ColumnSpacing="16" RowSpacing="12">
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="PortPilot (Windows prototype)" FontSize="18"/>

        <!-- Left: monitor + action setup -->
        <Border Grid.Row="1" Grid.Column="0" Padding="12" BorderThickness="1" CornerRadius="6">
            <StackPanel Spacing="10">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock VerticalAlignment="Center" Text="Monitor:"/>
                    <ComboBox Width="360"
                              ItemsSource="{Binding Monitors}"
                              SelectedItem="{Binding SelectedMonitor}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <Button Content="Refresh" Command="{Binding RefreshMonitorsCommand}"/>
                </StackPanel>

                <TextBlock Text="When device CONNECTED (Added) switch to:" FontWeight="SemiBold"/>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <ComboBox Width="220"
                              ItemsSource="{Binding InputSourceOptions}"
                              SelectedItem="{Binding OnAddedInputSourceOption}"/>
                    <Button Content="Switch now" Command="{Binding SwitchInputCommand}"/>
                </StackPanel>

                <TextBlock Text="When device DISCONNECTED (Removed) switch to:" FontWeight="SemiBold"/>
                <ComboBox Width="220"
                          ItemsSource="{Binding InputSourceOptions}"
                          SelectedItem="{Binding OnRemovedInputSourceOption}"/>

                <Separator/>

                <StackPanel Orientation="Horizontal" Spacing="8">
                    <CheckBox Content="Debug mode" IsChecked="{Binding IsDebugMode}" />
                    <CheckBox Content="Show all USB events" IsChecked="{Binding ShowAllUsbEvents}" IsVisible="{Binding IsDebugMode}"/>
                </StackPanel>

                <TextBlock Text="USB targets (safe list)" FontWeight="SemiBold"/>
                <ListBox Height="180"
                         ItemsSource="{Binding UsbTargets}"
                         SelectedItem="{Binding SelectedUsbDevice}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding Name}"/>
                                <TextBlock Opacity="0.7" FontSize="12" Text="{Binding DeviceId}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <TextBlock Text="USB events (raw):" FontWeight="SemiBold" IsVisible="{Binding IsDebugMode}"/>
                <ListBox Height="140"
                         ItemsSource="{Binding RecentUsbEvents}"
                         IsVisible="{Binding IsDebugMode}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding Name}"/>
                                <TextBlock Opacity="0.7" FontSize="12" Text="{Binding DeviceId}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Button Content="Add/Update rule" Command="{Binding AddRuleFromSelectionCommand}"/>
                    <Button Content="Load" Command="{Binding LoadConfigCommand}"/>
                    <Button Content="Save" Command="{Binding SaveConfigCommand}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Right: rules list (built-in controls only) -->
        <Border Grid.Row="1" Grid.Column="1" Padding="12" BorderThickness="1" CornerRadius="6">
            <StackPanel Spacing="10">
                <TextBlock Text="Rules (VID/PID -> Monitor/Input):" FontWeight="SemiBold"/>

                <Grid ColumnDefinitions="*,*,2*,*,*" RowDefinitions="Auto,*" ColumnSpacing="8" RowSpacing="8">
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="VID" FontWeight="SemiBold"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="PID" FontWeight="SemiBold"/>
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Monitor" FontWeight="SemiBold"/>
                    <TextBlock Grid.Row="0" Grid.Column="3" Text="OnAdded" FontWeight="SemiBold"/>
                    <TextBlock Grid.Row="0" Grid.Column="4" Text="OnRemoved" FontWeight="SemiBold"/>

                    <ScrollViewer Grid.Row="1" Grid.ColumnSpan="5">
                        <ItemsControl ItemsSource="{Binding RulesDisplay}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="*,*,2*,*,*" ColumnSpacing="8" Margin="0,0,0,6">
                                        <TextBlock Grid.Column="0" Text="{Binding Vid}"/>
                                        <TextBlock Grid.Column="1" Text="{Binding Pid}"/>
                                        <TextBlock Grid.Column="2" Text="{Binding MonitorName}" TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Grid.Column="3" Text="{Binding OnAddedLabel}"/>
                                        <TextBlock Grid.Column="4" Text="{Binding OnRemovedLabel}"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>

                <Separator/>

                <TextBlock Text="Debug log:" FontWeight="SemiBold" IsVisible="{Binding IsDebugMode}"/>
                <StackPanel Orientation="Horizontal" Spacing="8" IsVisible="{Binding IsDebugMode}">
                    <Button Content="Copy" Command="{Binding CopyDebugLogCommand}"/>
                    <Button Content="Save to file" Command="{Binding SaveDebugLogCommand}"/>
                </StackPanel>
                <TextBox Height="180"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Text="{Binding DebugLogText}"
                         IsVisible="{Binding IsDebugMode}"/>

                <TextBlock Opacity="0.7" FontSize="12"
                           Text="config.json location is shown in Status after Save."/>
            </StackPanel>
        </Border>

        <TextBlock Grid.Row="2" Grid.ColumnSpan="2" Text="{Binding Status}" />
    </Grid>
</Window>

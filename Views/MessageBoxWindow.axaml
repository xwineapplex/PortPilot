<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="460" d:DesignHeight="200"
        Width="460" Height="200"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        x:Class="PortPilot_Project.Views.MessageBoxWindow">

    <Grid RowDefinitions="*,Auto" Margin="16" RowSpacing="14">
        <TextBlock x:Name="MessageText"
                   TextWrapping="Wrap"
                   FontSize="14" />

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
            <Button x:Name="OkButton" MinWidth="100" />
            <Button x:Name="RestartButton" MinWidth="120" IsVisible="False" />
        </StackPanel>
    </Grid>
</Window>
